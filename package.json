{
  "name": "gtd",
  "version": "1.0.0",
  "description": "Personal Task Management with GTD methodology",
  "private": true,
  "workspaces": [
    "frontend",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "cd frontend && npm run build",
    "build:api": "cd api && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:api": "cd api && npm run start",
    "docker:build": "docker build -t gtd .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 -v gtd-data:/app/api/data gtd"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
